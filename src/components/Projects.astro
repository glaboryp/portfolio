---
import { projects } from "../data/projects";
---

<div class="space-y-12">
  <div class="text-center">
    <h2
      class="text-3xl md:text-4xl font-bold text-base-text dark:text-base-dark-text"
    >
      Proyectos Destacados
    </h2>
    <span class="block h-1 w-16 bg-brand mt-4 mx-auto"></span>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {
      projects.map((project) => (
        <article class="group bg-base-bg-alt dark:bg-base-dark-bg-alt border border-base-border dark:border-base-dark-border rounded-lg overflow-hidden hover:border-brand dark:hover:border-brand transition-all hover:shadow-xl">
          <div class="relative overflow-hidden aspect-video bg-base-border dark:bg-base-dark-border">
            <a
              href={`/projects/${project.slug}`}
              class="block w-full h-full cursor-pointer"
            >
              <img
                src={project.image}
                alt={`Vista previa de ${project.title}`}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </a>
          </div>

          <div class="p-6 space-y-4">
            <h3 class="text-2xl font-bold text-base-text dark:text-base-dark-text">
              <a
                href={`/projects/${project.slug}`}
                class="hover:text-brand transition-colors"
              >
                {project.title}
              </a>
            </h3>

            <p class="text-base-text-muted dark:text-base-dark-text-muted leading-relaxed line-clamp-4">
              {project.description}
            </p>

            <div class="flex flex-wrap gap-2">
              {project.technologies.map((tech, index) => (
                <span
                  class={`px-3 py-1 text-xs font-medium rounded-full ${
                    index % 2 === 0
                      ? "bg-brand-light/20 text-brand-dark dark:bg-brand/20 dark:text-brand-light"
                      : "bg-complementary/20 text-complementary-dark dark:bg-complementary/20 dark:text-complementary"
                  }`}
                >
                  {tech}
                </span>
              ))}
            </div>

            <div class="flex items-center gap-4 pt-2">
              {project.github && (
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-brand hover:text-brand-dark dark:hover:text-brand-light transition-colors font-medium"
                  aria-label={`Ver código de ${project.title} en GitHub`}
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                  <span class="text-sm">Código</span>
                </a>
              )}

              {project.demo && (
                <a
                  href={project.demo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-complementary hover:text-complementary-dark transition-colors font-medium"
                  aria-label={`Ver demo de ${project.title}`}
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                  <span class="text-sm">Demo</span>
                </a>
              )}

              {project.post && (
                <a
                  href={project.post}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-base-text-muted dark:text-base-dark-text-muted hover:text-brand dark:hover:text-brand transition-colors font-medium"
                  aria-label={`Leer artículo sobre ${project.title}`}
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                    />
                  </svg>
                  <span class="text-sm">Artículo</span>
                </a>
              )}
            </div>
          </div>
        </article>
      ))
    }
  </div>
</div>
